{% extends 'base.html.twig' %}

{% block body %}

    <section class="py-10 bg-gray-100 bg-opacity-50 h-screen" style="background: url('https://www.tremblant.ca/-/media/tremblant/things-to-do/events/beach-party/tremblant-beach-party-l.ashx');">
        <div class="mx-auto container max-w-2xl md:w-3/4 shadow-md">
            <div class="bg-gray-100 p-4 border-l-4 border-r-4 border-t-4 bg-opacity-5 border-white rounded-t">
                <div class="max-w-sm  mx-auto md:w-full md:mx-0">
                    <div class="inline-flex items-center space-x-4">
                        {% if picture.picture is defined %}
                        <img class="w-10 h-10 object-cover rounded-full" alt="User avatar"
                             src="{{ asset('/uploads/' ~ picture.picture) }}"/>
                        {% endif %}
                        <h1 class="text-white font-extrabold flex justify-center">Hello {{ app.user.nom }}</h1>
                    </div>
                </div>
            </div>
            <div class=" space-y-6 border-l-4 border-r-4 ">
                <div class="md:inline-flex space-y-4 md:space-y-0 w-full p-4 text-gray-500 items-center">
                    <h2 class="md:w-1/3  text-white font-extrabold max-w-sm mx-auto">Compte</h2>
                    <div class="md:w-2/3 text-white font-extrabold max-w-sm mx-auto">
                        Votre adresse mail : {{ app.user.email }}
                        <br>
                        Nom : {{ app.user.nom }}
                        <br>
                        Prénom : {{ app.user.prenom }}
                    </div>
                </div>
                <hr/>
                <div class="md:inline-flex space-y-4 md:space-y-0  w-full p-4 text-gray-500 items-center">
                    <h2 class="md:w-1/3 text-white font-extrabold mx-auto max-w-sm">Info personnel</h2>
                    <div class="md:w-2/3 text-white font-extrabold mx-auto max-w-sm space-y-5">
                        <div>
                            Status membre : {% if app.user.isVerified == true %}
                                <div class="text-green-500">
                                Activé
                                </div>
                            {% else %}
                                <div class="text-red-500">
                                En attente de confirmation de votre inscription
                                    </div>
                            {% endif %}
                            <div class="w-full inline-flex ">
                                <div class="w-1/12 pt-2">


                                </div>

                            </div>
                        </div>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="md:inline-flex w-full border-l-4 border-r-4 border-b-4 space-y-4 md:space-y-0 p-8 text-gray-500 items-center">
                    <h2 class="md:w-4/12 text-white font-extrabold max-w-sm mx-auto">Changer son mot de passe</h2>

                    <div class="md:w-5/12 w-full md:pl-9 max-w-sm mx-auto space-y-5 md:inline-flex pl-2">
                        <div class="w-full inline-flex ">
                            <div class="w-1/12 pt-2">
                                <svg fill="none" class="w-6 text-gray-400 mx-auto" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                            </div>
                            <input type="password" class="w-11/12 focus:outline-none focus:text-gray-600 p-2 ml-4" placeholder="Nouveau mot de passe"/>
                        </div>
                    </div>

                    <div class="md:w-3/12 text-center md:pl-6">
                        <button class="text-white w-full mx-auto max-w-sm rounded-md text-center bg-indigo-400 py-2 px-4 inline-flex items-center focus:outline-none md:float-right">
                            <svg fill="none" class="w-4 text-white mr-2" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            Valider
                        </button>
                    </div>
                </div>
                <hr/>
                <div class="w-full text-white font-extrabold p-4 text-right">
                    <a href="{{ path('user_edit', {'id': app.user.id}) }}">Editer le compte</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}