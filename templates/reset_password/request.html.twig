{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <!-- This is an example component -->
    <div class="h-screen font-sans login bg-cover">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="container mx-auto h-full flex flex-1 justify-center items-center">
            <div class="w-full max-w-lg">
                <div class="bg-blue-100  border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
                    <p class="font-bold">Info</p>
                    <p class="text-sm">Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe
                    </p>
                </div>
                <div class="leading-loose">
                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email, {
                            attr: {'class': "w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white"},
                            label_attr: {'class': 'mt-4 block text-sm text-white'},
                            label: "Entrez une adresse mail"
                        }) }}
                        <div class="mt-4 items-center text-white flex justify-between">
                            <button class="btn btn-primary">Envoyer un e-mail de réinitialisation de mot de passe</button>                        </div>

                </div>
            </div>
        </div>
    </div>
    <style>
        .login{
            /*
              background: url('https://tailwindadmin.netlify.app/dist/images/login-new.jpeg');
            */
            background: url('https://www.tremblant.ca/-/media/tremblant/things-to-do/events/beach-party/tremblant-beach-party-l.ashx');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
    {{ form_end(requestForm) }}
{% endblock %}
