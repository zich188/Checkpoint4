{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="h-screen font-sans login bg-cover">
        <div class="container mx-auto h-full flex flex-1 justify-center items-center">
            <div class="w-full max-w-lg">
                <div class="leading-loose">
                    <form method="post" class="max-w-sm m-4 p-10 bg-white bg-opacity-25 rounded shadow-xl">
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        {{ form_start(registrationForm) }}
                        <p class="text-white font-medium text-center text-lg font-bold">Cr√©ation d'un compte</p>
                        <div class="">
                            {{ form_row(registrationForm.email, {
                                attr: {'class': "w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white"},
                                label_attr: {'class': 'mt-4 block text-sm text-white'},
                                label: "Entrez une adresse mail"
                            }) }}
                        </div>
                        <div class="mt-2">
                            {{ form_row(registrationForm.plainPassword, {
                                attr: {'class': "w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white"},
                                label_attr: {'class': 'mt-4 block text-sm text-white'},
                                label: "Entrez un mot de passe"
                            }) }}
                        </div>
                        <div class="">
                            {{ form_row(registrationForm.nom, {
                                attr: {'class': "w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white"},
                                label_attr: {'class': 'mt-4 block text-sm text-white'},
                                label: "Entrez un nom"
                            }) }}
                        </div>
                        <div class="">
                            {{ form_row(registrationForm.prenom, {
                                attr: {'class': "w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white"},
                                label_attr: {'class': 'mt-4 block text-sm text-white'},
                                label: "Entrez un Prenom"
                            }) }}
                        </div>
                        <div class="mb-2">
                            {{ form_row(registrationForm.posterFile, {
                                label_attr: {'class': 'mt-4 block text-sm text-white'},
                                label: "Choisir une photo de profil (non obligatoire)"
                            }) }}
                        </div>
                        {{ form_row(registrationForm.agreeTerms) }}

                        <div class="mt-4 items-center flex justify-between">
                            <button class=" btn px-4 py-1 text-white font-light tracking-wider bg-gray-900 hover:bg-gray-800 rounded"
                                    type="submit">Valider</button>
                            {{ form_end(registrationForm) }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <style>
        .login{
            /*
              background: url('https://tailwindadmin.netlify.app/dist/images/login-new.jpeg');
            */
            background: url('https://www.tremblant.ca/-/media/tremblant/things-to-do/events/beach-party/tremblant-beach-party-l.ashx');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
{% endblock %}
